{
    "name": "oauth2-framework/authorization-server-library",
    "type": "library",
    "description": "OAuth2 Server Library",
    "license": "MIT",
    "keywords": ["RFC6749", "oauth2", "framework", "authorization", "server", "library", "openid", "openid connect", "oidc"],
    "homepage": "https://github.com/OAuth2-Framework/oauth2-server-library",
    "authors": [
        {
            "name": "Florent Morselli",
            "homepage": "https://github.com/Spomky"
        },
        {
            "name": "All contributors",
            "homepage": "https://github.com/OAuth2-Framework/authorization-server-library/contributors"
        }
    ],
    "require": {
        "php": "^5.6|^7.0",
        "psr/http-message": "^1.0",
        "spomky-labs/jose": "^6.1.1",
        "oauth2-framework/exception-manager-library": "^1.0.0",
        "oauth2-framework/token-type-manager-library": "^1.0.0",
        "beberlei/assert": "^2.6.4",
        "php-http/httplug": "^1.1"
    },
    "require-dev": {
        "zendframework/zend-diactoros": "^1.1",
        "phpunit/phpunit": "^5.0",
        "symfony/psr-http-message-bridge": "^0.2",
        "symfony/var-dumper": "^2.8|^3.0",
        "symfony/http-foundation": "^2.8|^3.0",
        "symfony/process": "^2.8|^3.0",
        "satooshi/php-coveralls": "^1.0",
        "paquettg/php-html-parser": "^1.6",
        "silex/silex": "^2.0",
        "guzzlehttp/guzzle": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "OAuth2\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OAuth2\\Test\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    }
}
