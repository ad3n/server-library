{
    "name": "spomky-labs/oauth2-server-library",
    "type": "library",
    "description": "OAuth2 Server Library",
    "license": "MIT",
    "keywords": ["oauth2", "server", "library", "openid"],
    "homepage": "https://github.com/Spomky-Labs/oauth2-server-library",
    "authors": [
        {
            "name": "Florent Morselli",
            "homepage": "https://github.com/Spomky"
        },
        {
            "name": "All contributors",
            "homepage": "https://github.com/Spomky-Labs/oauth2-server-library/contributors"
        }
    ],
    "require": {
        "php": "^5.6|^7.0",
        "psr/http-message": "^1.0",
        "spomky-labs/jose": "^6.0",
        "guzzlehttp/guzzle": "^6.0"
    },
    "require-dev": {
        "zendframework/zend-diactoros": "^1.1",
        "phpunit/phpunit": "^5.0",
        "symfony/psr-http-message-bridge": "^0.2",
        "symfony/var-dumper": "^2.8|^3.0",
        "symfony/http-foundation": "^2.8|^3.0",
        "symfony/process": "^2.8|^3.0",
        "satooshi/php-coveralls": "^1.0",
        "paquettg/php-html-parser": "^1.6",
        "silex/silex": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "OAuth2\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OAuth2\\Test\\": "tests/"
        }
    },
    "scripts":{
        "test": "phpunit",
        "test-with-coverage": "phpunit --coverage-clover build/logs/clover.xml"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
